<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bgadm"
        tools:context=".LoginAdmActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
                android:layout_width="match_parent"
                android:layout_marginTop="48dp"
                android:layout_marginRight="48dp"
                android:layout_marginLeft="48dp"
                android:layout_height="112dp" app:srcCompat="@mipmap/ic_launcher" android:id="@+id/imageView3"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="48dp"
                android:layout_marginRight="48dp"
                android:inputType="textPersonName"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textAlignment="center"
                android:textColorHint="@color/white"
                android:hint="UsuÃ¡rio"
                android:text=""
                android:ems="10"
                android:id="@+id/editText"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="48dp"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="48dp"
                android:hint="Senha"
                android:textColorHint="@color/white"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/editText2"/>
        <Button
                android:text="Entrar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:layout_marginLeft="48dp"
                android:layout_marginRight="48dp"
                android:background="@color/bgcaminhoneiro"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textAlignment="center"
                android:id="@+id/btnentraradm"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>