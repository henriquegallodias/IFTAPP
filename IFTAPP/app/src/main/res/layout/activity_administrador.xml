<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bgadm"
        tools:context=".AdministradorActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <Button
                android:text="Cadastrar Carga"
                android:layout_marginTop="96dp"
                android:layout_marginRight="48dp"
                android:layout_marginLeft="48dp"
                android:background="@color/bgcaminhoneiro"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btncadcarga"/>
        <Button
                android:text="Cadastrar Funcionário"
                android:layout_marginTop="24dp"
                android:layout_marginRight="48dp"
                android:layout_marginLeft="48dp"
                android:background="@color/bgcaminhoneiro"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btncadfunc"/>
        <Button
                android:text="Visualizar Funcionários"
                android:layout_marginTop="24dp"
                android:layout_marginRight="48dp"
                android:layout_marginLeft="48dp"
                android:background="@color/bgcaminhoneiro"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnconsufunc"/>
        <Button
                android:text="Visualizar Viagens"
                android:layout_marginTop="24dp"
                android:layout_marginRight="48dp"
                android:layout_marginLeft="48dp"
                android:background="@color/bgcaminhoneiro"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnconsuviagem"/>
        <Button
                android:id="@+id/btnsaira"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:layout_marginRight="48dp"
                android:layout_marginLeft="48dp"
                android:text="Sair"
                android:textSize="25sp"
                android:background="@color/bgcaminhoneiro"
                android:textColor="@color/white"
                android:textStyle="bold"></Button>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>