<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bgcaminhoneiro"
        tools:context=".MainActivity">


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="112dp" app:srcCompat="@mipmap/ic_launcher"
                android:layout_marginTop="48dp"
                android:id="@+id/imageView"/>
        <TextView
                android:text="Entre como:"
                android:layout_marginTop="24dp"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="35sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView"/>
        <Button
                android:text="Caminhoneiro"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:background="@color/bgadm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginRight="48dp"
                android:layout_marginLeft="48dp"
                android:id="@+id/btncam"/>
        <TextView
                android:text="OU"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_marginTop="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"/>
        <Button
                android:text="Administrador"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:background="@color/bgadm"
                android:layout_marginTop="24dp"
                android:layout_width="match_parent"
                android:layout_marginRight="48dp"
                android:layout_marginLeft="48dp"
                android:layout_height="wrap_content" android:id="@+id/btnadm"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>